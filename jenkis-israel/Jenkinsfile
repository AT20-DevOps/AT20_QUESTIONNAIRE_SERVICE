pipeline{
    agent any

    stages{
        stage('test'){
            agent{docker 'node:18-alpine3.16'}
            steps{
                sh 'npm install'
                sh 'npm test'
            }
            post{
                always{
                    archiveArtifacts artifacts: 'jest_html_reporters.html', followSymlinks: false
                }
            }
        }
    }
}